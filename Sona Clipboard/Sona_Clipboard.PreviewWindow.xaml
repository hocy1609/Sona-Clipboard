<Window
    x:Class="Sona_Clipboard.PreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <!-- Основной контейнер -->
    <Grid Background="Transparent" Padding="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="*"/>
            <!-- Контент -->
            <!-- Строка для кнопки удалена, так как кнопки больше нет -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <FontIcon Glyph="&#xE81C;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,5,0" Opacity="0.7"/>
            <TextBlock x:Name="IndexText" Text="Clip #1" FontWeight="Bold" Opacity="0.7" FontSize="12"/>
        </StackPanel>

        <!-- Контент (Текст или Картинка) -->
        <Border Grid.Row="1" CornerRadius="8" Background="#10FFFFFF" Padding="10">
            <Grid>
                <TextBlock x:Name="PreviewText" 
                           TextWrapping="Wrap" 
                           TextTrimming="CharacterEllipsis" 
                           MaxLines="6"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontSize="14"/>

                <Image x:Name="PreviewImage" 
                       Stretch="Uniform"
                       Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- КНОПКА "СКОПИРОВАТЬ" УДАЛЕНА, ЧТОБЫ ИСПРАВИТЬ ОШИБКУ -->
    </Grid>
</Window>