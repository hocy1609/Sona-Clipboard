<Window
    x:Class="Sona_Clipboard.Views.PreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <!-- Основной контейнер -->
    <Grid Background="Transparent" Padding="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <FontIcon Glyph="&#xE81C;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,5,0" Opacity="0.7"/>
            <TextBlock x:Name="IndexText" Text="Clip #1" FontWeight="Bold" Opacity="0.7" FontSize="12"/>
        </StackPanel>

        <!-- Контент -->
        <Border Grid.Row="1" CornerRadius="12" Background="#20FFFFFF" Padding="2" BorderThickness="1" BorderBrush="#20FFFFFF">
            <Grid x:Name="ContentHost" CornerRadius="10" Background="#15000000">
                <ScrollViewer x:Name="TextScroll" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="15">
                    <TextBlock x:Name="PreviewText" 
                               TextWrapping="Wrap" 
                               FontSize="14"
                               LineHeight="20"/>
                </ScrollViewer>

                <Viewbox x:Name="ImageViewbox" Visibility="Collapsed">
                    <Image x:Name="PreviewImage" Stretch="Uniform" />
                </Viewbox>
                
                <Viewbox x:Name="SvgViewbox" Visibility="Collapsed">
                    <Image x:Name="PreviewSvg" Stretch="Uniform" />
                </Viewbox>
            </Grid>
        </Border>
    </Grid>
</Window>